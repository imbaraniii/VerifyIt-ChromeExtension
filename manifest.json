{
    "manifest_version": 3,
    "name": "Real Time Fact Checker",
    "description": "Fact check any content",
    "version": "1.0",
    "action": {
      "default_popup": "/templates/demo.html"
    },
    "permissions": [
      "activeTab",
      "http://localhost:5000/*"
    ],
    "host_permissions": [
      "http://localhost:5000/*"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["static/content.js"]
      }
    ]
  }